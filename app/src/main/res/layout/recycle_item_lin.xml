<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="40dp">

    <ImageView
        android:id="@+id/img_rec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@drawable/img_book_morphine"/>
    <TextView
        android:id="@+id/txt_rec_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text ="Title"
        android:layout_alignParentRight="true"
        android:textSize="15sp"
        android:textColor="#000000"/>
    <TextView
        android:id="@+id/txt_rec_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Author"
        android:layout_below="@id/txt_rec_title"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"/>
    <RatingBar
        android:id="@+id/rating_rec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/ratingBarStyleSmall"
        android:isIndicator="true"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/img_rec"
        android:max="5"
        android:numStars="5"
        android:stepSize="1"
        tools:rating="4"/>
</RelativeLayout>